<h1 class="display-1">User Account</h1>
<hr>
<h2>My Orders</h2>
{{#each orders}}

<div class="card mb-3">
	<h4 class="card-header">Order ID: {{this._id}}</h4>
	<ul class="list-group list-group-flush">
		{{#each this.items}}
		  <li class="list-group-item d-flex justify-content-between align-items-center">
		    {{this.item.title}} | {{this.qty}} Units
		    <span class="badge badge-primary badge-pill">${{ this.price }}</span>
		  </li>
		{{/each}}
	</ul>
	<div class="card-footer">
		Total Price: <strong>${{ this.cart.totalPrice }}</strong>
	</div>
</div>
{{/each}}
