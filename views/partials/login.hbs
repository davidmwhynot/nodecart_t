<div class="card mb-2">
	<h3 class="card-header card-title">Login</h3>
	<div class="card-body">
		{{#if hasErrors}}
				{{#each messages}}
				<div class="alert alert-danger">{{this}}</div>
				{{/each}}
		{{/if}}
		<div class="form-row mb-3">
			<label class="col-sm-3 col-xl-2 col-form-label" for="email">E-Mail</label>
			<input type="text" id="email" name="email" class="form-control col-sm-9 col-xl-10" autocomplete="email">
		</div>
		<div class="form-row mb-3">
			<label class="col-sm-3 col-xl-2 col-form-label" for="password">Password</label>
			<input type="password" id="password" name="password" class="form-control col-sm-9 col-xl-10" autocomplete="current-password">
		</div>
		<div class="form-row">
			<div class="offset-sm-3 offset-xl-2 col-sm-3 col-xl-2 p-0 mr-0">
				<button id="loginSubmit" class="btn btn-primary">Login</button>
			</div>
			<div class="pl-sm-2 col-sm-6 col-xl-8 text-small text-muted">
				Don't have an account yet? <a href="/user/register">Sign Up</a>
			</div>
		</div>
	</div>
</div>
